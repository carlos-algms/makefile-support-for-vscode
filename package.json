{
  "version": "0.0.1",
  "name": "make",
  "publisher": "carlos-algms",
  "displayName": "Makefile support for VS Code",
  "description": "Extension to add Makefile capabilities to VS Code.",
  "icon": "images/Makefile.png",
  "repository": "https://github.com/carlos-algms/makefile-support-for-vscode",
  "author": {
    "name": "Carlos Gomes",
    "email": "vscode-publisher@gomescarlos.com"
  },
  "main": "./build/extension.js",
  "activationEvents": [
    "onCommand:workbench.action.tasks.runTask"
  ],
  "contributes": {
    "taskDefinitions": [
      {
        "type": "make",
        "required": [
          "targetName"
        ],
        "properties": {
          "targetName": {
            "type": "string",
            "description": "The make target name to run. Must exist in your Makefile"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./build/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.3",
    "@types/node": "^12.12.68",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.11.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.0",
    "typescript": "^4.0.3",
    "vscode-nls": "^5.0.0",
    "vscode-test": "^1.4.0"
  },
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ]
}
